{
  "name": "aqualuxe-theme",
  "version": "1.0.0",
  "description": "A modular, multitenant, multivendor WordPress theme with WooCommerce integration",
  "main": "index.php",
  "scripts": {
    "dev": "npm run development",
    "development": "mix",
    "watch": "mix watch",
    "watch-poll": "mix watch -- --watch-options-poll=1000",
    "hot": "mix watch --hot",
    "prod": "npm run production",
    "production": "mix --production",
    "build": "npm run production",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "stylelint 'assets/src/**/*.{css,scss}'",
    "lint:js": "eslint assets/src/js/**/*.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rimraf assets/dist",
    "prepare": "husky install"
  },
  "keywords": [
    "wordpress",
    "theme",
    "woocommerce",
    "responsive",
    "modular",
    "aqualuxe"
  ],
  "author": "AquaLuxe Team",
  "license": "GPL-2.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/kasunvimarshana/aqualuxe-web.git"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@tailwindcss/forms": "^0.5.6",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "browser-sync": "^2.29.3",
    "browser-sync-webpack-plugin": "^2.3.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "eslint": "^8.52.0",
    "eslint-config-standard": "^17.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "laravel-mix": "^6.0.49",
    "lint-staged": "^15.0.2",
    "postcss": "^8.4.31",
    "postcss-loader": "^7.3.3",
    "resolve-url-loader": "^5.0.0",
    "rimraf": "^5.0.5",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "tailwindcss": "^3.3.5",
    "webpack": "^5.89.0"
  },
  "dependencies": {
    "alpinejs": "^3.13.2",
    "swiper": "^11.0.4"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{css,scss}": [
      "stylelint --fix",
      "git add"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}